{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "bundler",
        "sourceMap": true,
        "outDir": "../../dist/webview",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}